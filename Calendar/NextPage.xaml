<Page x:Class="Calendar.NextPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NextPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="1" x:Name="DatesPanel" Height="300" VerticalAlignment="Bottom">

        </WrapPanel>

        <Button x:Name="BackMouth" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"
                Height="100" Width="100" FontSize="30" Click="BackMouth_Click"/>

        <Button x:Name="NextMouth" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Top"
                Height="100" Width="100" FontSize="30" Click="NextMouth_Click"/>

        <DatePicker x:Name="DateDpk" SelectedDateChanged="DateDpk_SelectedDateChanged" FontSize="50" Width="300" Height="100" VerticalAlignment="Center" 
                     HorizontalAlignment="Center"/>
    </Grid>
</Page>
